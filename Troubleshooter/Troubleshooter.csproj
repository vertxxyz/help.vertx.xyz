<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<RootNamespace>help.vertx.xyz</RootNamespace>
		<Configurations>Release;Debug</Configurations>
		<Platforms>AnyCPU</Platforms>
		<IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
		<LangVersion>10</LangVersion>
		<Authors>Vertx</Authors>
		<Company>Vertx</Company>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup Condition="'$(IsWindows)'=='true'">
		<DefineConstants>WINDOWS</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="DartSassHost" Version="1.0.0-preview8" />
		<PackageReference Include="HtmlAgilityPack" Version="1.11.43" />
		<PackageReference Include="JavaScriptEngineSwitcher.V8" Version="3.20.2" />
		<PackageReference Include="JetBrains.Annotations" Version="2022.1.0" />
		<PackageReference Include="Markdig" Version="0.30.3" />
		<PackageReference Include="Microsoft.ClearScript.V8.Native.win-x64" Version="7.3.2" />
		<PackageReference Include="NUglify" Version="1.20.2" />
		<PackageReference Include="RtfPipe" Version="2.0.7677.4303" />
		<PackageReference Include="System.Text.Encoding.CodePages" Version="7.0.0-rc.1.22426.10" />
		<PackageReference Include="WebStoating.Markdig.Prism" Version="1.0.0" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Assets" />
	</ItemGroup>

</Project>
