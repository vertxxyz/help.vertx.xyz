<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net5.0</TargetFramework>
		<RootNamespace>help.vertx.xyz</RootNamespace>
		<Configurations>Release;Debug</Configurations>
		<Platforms>AnyCPU</Platforms>
		<IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
		<LangVersion>9</LangVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(IsWindows)'=='true'">
		<DefineConstants>WINDOWS</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="DartSassHost" Version="1.0.0-preview6" />
	  <PackageReference Include="JavaScriptEngineSwitcher.V8" Version="3.13.1" />
	  <PackageReference Include="JetBrains.Annotations" Version="2021.3.0-eap3" />
	  <PackageReference Include="Markdig" Version="0.26.0" />
	  <PackageReference Include="Microsoft.ClearScript.V8.Native.win-x64" Version="7.1.6" />
	  <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	  <PackageReference Include="RtfPipe" Version="2.0.7677.4303" />
	  <PackageReference Include="System.Text.Encoding.CodePages" Version="6.0.0-rc.1.21451.13" />
	  <PackageReference Include="WebStoating.Markdig.Prism" Version="1.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Assets" />
	</ItemGroup>

</Project>
